<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>UserDataForm</title>
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }
    </style>
</head>

<body>
    <section class="vh-100">
        <div class="container py-5 h-100" style="margin-top: 150px;">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                        class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form action="/createPost" method="post">

                        <!-- Usernmae input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="userName" class="form-control form-control-lg" name="userName"
                                required />
                            <label class="form-label" for="userName">Username</label>
                        </div>

                        <!-- Preferred Code Language input -->
                        <div class="form-outline mb-4">
                            <select class="form-control form-control-lg" name="codeLang" id="codeLang" required>
                                <option value="c++">C++</option>
                                <option value="java">java</option>
                                <option value="javascript">javascript</option>
                                <option value="python">python</option>
                            </select>
                            <label class="form-label" for="codeLang">Preferred Code Language</label>
                        </div>

                        <!-- Stander_Input input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="stdInp" class="form-control form-control-lg" name="stdInp"
                                required />
                            <label class="form-label" for="stdInp">Standard Input</label>
                        </div>

                        <!-- Source_Code input -->
                        <div class="form-outline mb-4">
                            <label for="exampleFormControlTextarea1">Source Code</label>
                            <textarea class="form-control" id="srcCode" rows="5" name="srcCode" required></textarea>
                        </div>



                        <!-- Submit button -->
                        <button class="btn btn-primary btn-lg btn-block">Submit</button>
                    </form>
                    <form action="/getPosts" method="get" style="padding-top: 10px;">
                        <button class="btn btn-success btn-lg btn-block">Show All Posts</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>

</html>